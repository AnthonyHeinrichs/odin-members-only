<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/app.js" defer></script>
  <title>Members only</title>
</head>
<body> 
  <div class="nav_buttons">
    <button id="button1">Sign In</button>
    <button id="button2">Sign Up</button>
  </div>
  <div class="center">
    <div class="main_top">
      <img class="main_top__icons" src="images/memberboxicons.png" alt="box_icons">
    </div>
    <div class="main_header">
      <h1 class="main_header__text">Members Only</h1>
    </div>
    <% if (user) {%>
      <p>Welcome back <%= user.username %></p>
      <a href="/log-out">Log out</a>
    <% } else { %>
      <p>Only members who have signed up with the correct pass code can see who wrote the messages and when </p>
    <%}%>
    <button>Add new message</button>
    <div class="messages">
      <% for (let i = 1; i <= 10; i++) { %>
        <%- include('./partials/messages.ejs', {value: i}); %>
      <% } %>
    </div>
  </div>
  <div class="sign_up">
    <div class="sign_up__modal hidden">
      <%- include('./partials/sign-up-modal.ejs')%>
    </div>
  </div>
  <div class="sign_in">
    <div class="sign_in__modal hidden">
      <%- include('./partials/sign-in-modal.ejs')%>
    </div>
  </div>
</body>
</html>